@model IEnumerable<Recipes.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="d-flex flex-row" >
@foreach (var item in Model)
{
    <div class="d-flex justify-content-around">

    <div class="card" style="width: 28rem;">
        <img src="images/photo1.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
             <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <div class="d-flex justify-content-evenly">
                    <p class="card-text"><img src="https://img.icons8.com/material-outlined/24/000000/clock--v1.png"/> @Html.DisplayFor(modelItem => item.TimeToMake)</p>
                @if (item.Healthy == true)
                {
                    <p class="card-text"><img src="https://img.icons8.com/material-outlined/24/000000/heart-health.png"/> Healthy</p>
                }
                    <p class="card-text"><img src="https://img.icons8.com/material-two-tone/24/000000/line-chart.png"/> @Html.DisplayFor(modelItem => item.Difficulty)</p>
                @if (item.DietaryRequirements != null)
                {
                    <p class="card-text"><img src="https://img.icons8.com/material-outlined/24/000000/vegan-food.png"/> @Html.DisplayFor(modelItem => item.DietaryRequirements)</p>
                }
            </div>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
            <i class="bi bi-info-circle"></i> Details
            </a>
        </div>
    </div>
    </div>
    <br />
    @*</div>*@
    
