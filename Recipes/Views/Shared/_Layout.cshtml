<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Recipes.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body style="background-color: #95b1cc">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #8aafd4">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav flex-grow-1">
                    @*<li class="mx-3">
                        <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                        </li>*@
                    <li class="nav-item dropdown ms-5">
                        <a class="nav-link dropdown-toggle text-dark fs-5" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Recipes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Recipes" asp-action="Index">All Recipes</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark dropdown-item" asp-controller="Recipes" asp-action="HealthyRecipes">Healthy Recipes</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark dropdown-item" asp-controller="Recipes" asp-action="QuickEasyRecipes">Quick & Easy Recipes</a>
                            </li>
                        </ul>
                    </li>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @*<ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            </ul>*@
                    </div>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-2">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted margin-bottom: 10px" style="background-color: #8aafd4">
        <div class="container">
            &copy; 2022 - Recipes
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
